<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/changeThemeContainer"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="16dp"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.lu_xinghe.project600final.activity_changeTheme">
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent" >
        <RelativeLayout
            android:id="@+id/form_layout"
            android:layout_width="match_parent"
            android:layout_height="match_parent">
    <Button
        android:id="@+id/ThemeButton0"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAllCaps="false"
        android:text="Theme1"/>
    <Button
        android:id="@+id/ThemeButton1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/ThemeButton0"
        android:textAllCaps="false"
        android:text="Theme2" />
    <Button
        android:id="@+id/ThemeButton2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/ThemeButton1"
        android:textAllCaps="false"
        android:text="Theme3"/>
    <Button
        android:id="@+id/ThemeButton3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/ThemeButton2"
        android:textAllCaps="false"
        android:text="Apply"/>
    <TextView
        android:id="@+id/status2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/ThemeButton3"/>

    <com.lu_xinghe.project600final.FancyRotaryKnobView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:layout_below="@id/status2"
        android:id="@+id/fancyRotaryKnobView"/>

    <TextView
        android:id="@+id/about_this_app"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/fancyRotaryKnobView"
        android:textSize="11dp"
        android:textColor="@color/colorAboutme"
        android:textStyle="bold"
        android:text="About this app\n"/>
    <TextView
        android:id="@+id/app_name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/about_this_app"
        android:textStyle="bold"
        android:text="SU News"/>
    <TextView
        android:id="@+id/app_version"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/app_name"
        android:text="Version: 1.0\n"/>

    <TextView
        android:id="@+id/composer"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/app_version"
        android:text="@string/copyright"/>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/composer"
                android:text="\n"/>
        </RelativeLayout>
    </ScrollView>
</RelativeLayout>
